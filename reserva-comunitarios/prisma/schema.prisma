generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Espacios {
  id            Int       @id
  nombre        String
  tipoEspacioId Int
  descripcion   String?
  capacidad     Int
  tarifaHora    Float
  tarifaDia     Float
  estado        Int       @default(1)
  creadoEn      DateTime? @default(now())
  actualizadoEn DateTime? @updatedAt

  reservaciones Reservaciones[]
}

model TiposReservacion {
  id            Int       @id @default(autoincrement())
  nombre        String
  estado        Int       @default(1)
  creadoEn      DateTime? @default(now())
  actualizadoEn DateTime? @updatedAt

  reservaciones Reservaciones[]
}

model Reservaciones {
  id                  Int      @id @default(autoincrement())
  usuarioId           Int
  espacioId           Int
  fechaInicial        DateTime
  fechaFinal          DateTime
  horasReserva        Int
  importeTotal        Float
  estadoReservacionId Int
  transaccionId       String?
  eventoCalendarioId  String?

  estado        Int       @default(1)
  creadoEn      DateTime? @default(now())
  actualizadoEn DateTime? @updatedAt

  tiposReservacion TiposReservacion @relation(fields: [estadoReservacionId], references: [id])
  espacios         Espacios         @relation(fields: [espacioId], references: [id])
}
